{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "next/core-web-vitals",
    "airbnb",
    "plugin:jsx-a11y/recommended"
  ],
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": [
    "react",
    "react-hooks",
    "prettier"
  ],
  "rules": {
    "jsx-a11y/html-has-lang": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "no-console": "warn",
    "prettier/prettier": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
